{% extends "::base.html.twig" %}
{% block content %}
    <br><br><br>
    <br><br><br>
    <h1 style="text-align: center; color: #cb1d1d"> Ajouter Une Promotion</h1>
    <div class="container">
        <div class="row">
            {{ form_start(prom) }}

            <div class="form-group required">
                {{ form_label(prom.pourcentage,'Pourcentage Promotion', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">


                    {{ form_widget(prom.pourcentage, {'attr':{'class':'form-control','placeholder':'Pourcentage du Promotion'}}) }}
                </div>
            </div>

            <div class="form-group required">
                {{ form_label(prom.dateDebut, 'Date Début', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">


                    {{ form_widget(prom.dateDebut, {'attr':{'class':'form-control','placeholder':'Date Début'}}) }}
                </div>
            </div>

            <div class="form-group required">
                {{ form_label(prom.dateFin, 'Date Fin', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">


                    {{ form_widget(prom.dateFin, {'attr':{'class':'form-control','placeholder':'Date Fin'}}) }}
                </div>
            </div>




            <div  class="pull-right">
                <br><br><br><br><br>
                <input type="submit" class=" btn btn-primary col-lg-push-3" value="Ajouter ">
                <br>        <br><br><br><br></div>

            {{ form_end(prom) }}
        </div>
    </div>


{% endblock %}