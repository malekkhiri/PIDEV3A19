{% extends "::base.html.twig" %}
{% block content %}
    <div class="container">
        <h1 style="text-align: center;color:#cb1d1d ">Modifier Magasin</h1>
        {{ form_start(form) }}




        <div class="form-group required">
            {{ form_label(form.nom_magasin, 'Nom Magasin', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.nom_magasin, {'attr':{'class':'form-control','placeholder':'Nom Magasin'}}) }}
            </div>
        </div>
        <div class="form-group required">
            {{ form_label(form.region, 'region', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.region, {'attr':{'class':'form-control','placeholder':'region'}}) }}
            </div>
        </div> <div class="form-group required">
            {{ form_label(form.ville, 'ville', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.ville, {'attr':{'class':'form-control','placeholder':'ville'}}) }}
            </div>
        </div>
        <div class="form-group required">
            {{ form_label(form.adresse_magasin, 'Adresse Magasin', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.adresse_magasin, {'attr':{'class':'form-control','placeholder':'Adresse Magasin'}}) }}
            </div>
        </div>

        <div class="pull-right">
            <br><br><br>
            <input type="submit" class=" btn btn-primary col-lg-push-3" value="Modifier Magasin">
            <br><br><br>
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}