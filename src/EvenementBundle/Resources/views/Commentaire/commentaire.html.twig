{% extends '::base.html.twig' %}
{% block content %}
<h1>Listes des commentaires</h1>

<style>
    textarea
    {
        resize: none;
    }
</style>
    <div id="tab-review" class="tab-pane">
        <div class="form-horizontal">
<div id="review">
    <div>
        {% for commentaire in c  %}
        <table class="table table-striped table-bordered">
            <body>
            <tr>
                <td style="width: 50%;"><strong><span>{{ commentaire.commentator }}</span></strong></td>
                <td class="text-right"><span>{{ commentaire.creationDate|date("d/m/Y") }}</span></td>
            </tr>
            <tr>
                <td colspan="2"><p>
                    {{ commentaire.contenu }}  </td>
                {#<span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>#}
            </tr>
            </body>
        </table>
        {% endfor %}
    </div>
    <div class="text-right"></div>
</div>
<h2>Write a review</h2>

<div class="form-group required">
    <div class="col-sm-12">
        <label for="input-review" class="control-label">Your Review</label><br>
        {{ form_start(form) }}
        {{ form_widget(form.contenu) }}<br>
        {{ form_widget(form.ajouter, { 'attr' : { 'class': 'btn btn-primary' } }) }}
        {{ form_end(form) }}

    </div>


{#
<div class="buttons">
    <div class="pull-right">
        <button type="submit" class="btn btn-primary" id="button-review" type="button">Continue</button>
    </div>
</div>#}
</div>
</div>

{% endblock %}