{% extends "::base.html.twig" %}
{% block content %}

    <h1>Modifier Evenement</h1>
    <div class="container">
        <div class="col-sm-9" id="content">
            {{ form_start(e) }}
            <div class="form-group required">
                {{ form_label(e.dateDebut, 'Date de Debut', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(e.dateDebut, {'attr':{'class':'form-control','placeholder':'Date de Debut'}}) }}
                </div>
            </div>
            <div class="form-group required">
                {{ form_label(e.dateFin, 'Date de Fin', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(e.dateFin, {'attr':{'class':'form-control','placeholder':'Date de Fin'}}) }}
                </div>
            </div>
            <div class="form-group required">
                {{ form_label(e.nomEvenement, 'Nom Evenement', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(e.nomEvenement, {'attr':{'class':'form-control','placeholder':'Nom Evenement'}}) }}
                </div>
            </div>

            <div class="form-group required">
                {{ form_label(e.lieux, 'Lieux ', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(e.lieux, {'attr':{'class':'form-control','placeholder':'Lieux'}}) }}
                </div>
            </div>

            <div class="form-group required">
                {{ form_label(e.description, 'Description', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(e.description, {'attr':{'class':'form-control','placeholder':'Description'}}) }}
                </div>
            </div>
            <div class="pull-right">
                <input type="submit" class=" btn btn-primary col-lg-push-3" value="Modifier un Evenement">
            </div>




            {{ form_end(e) }}
        </div>
    </div>
{% endblock %}