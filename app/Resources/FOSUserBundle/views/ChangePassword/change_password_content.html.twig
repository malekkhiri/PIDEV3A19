    {{ form_widget(form.plainPassword.second, {'attr':{'placeholder':'Confirm password'}}) }}
    <label for="input-confirm" class="col-sm-2 control-label">Password Confirm</label>


    <div>
        <input type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
