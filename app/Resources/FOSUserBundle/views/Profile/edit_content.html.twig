<div class="form-group required">
    {{ form_label(form.username, 'Username', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.username, {'attr':{'class':'form-control','placeholder':'Username'}}) }}
    </div>
</div>

<div class="form-group required">
    {{ form_label(form.email, 'E mail', {'label_attr' :{'class': 'col-sm-2 control-label'}}) }}
